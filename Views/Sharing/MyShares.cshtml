@model IEnumerable<WebBaoDienTu.Models.NewsSharing>

@{
    ViewData["Title"] = "Bài viết đã chia sẻ";
    Layout = "_Layout";
}

<!-- Liên kết CSS và thư viện -->
<link rel="stylesheet" href="~/css/shared-news.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Roboto:wght@400;500;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<h2 class="page-title">@ViewData["Title"]</h2>

<div class="news-container mt-4 d-flex justify-content-center">
    <div class="col-md-12">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center animate-alert">
                <i class="fas fa-info-circle me-2"></i> Bạn chưa chia sẻ bài viết nào.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="news-table table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Người nhận</th>
                            <th>Ngày chia sẻ</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="shared-@item.Id">
                                <td>@item.News.Title</td>
                                <td>@item.RecipientEmail</td>
                                <td>@item.ShareDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="action-buttons text-center">
                                    <a asp-controller="News" asp-action="Read" asp-route-id="@item.NewsId" class="btn btn-primary btn-sm">
                                        <i class="fas fa-eye me-1"></i> Xem bài viết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
